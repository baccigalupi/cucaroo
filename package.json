    "bdd"
  ],
  "author": "Kane Baccigalupi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/baccigalupi/cucaroo/issues"
  },
  "homepage": "https://github.com/baccigalupi/cucaroo#readme",
  "dependencies": {
    "async": "^2.4.1",
    "chalk": "^1.1.3",
    "eventemitter2": "^4.1.0",
    "fs-walk": "0.0.1",
    "gherkin": "^4.1.3",
    "require-directory": "^2.1.1"
  },
  "devDependencies": {
    "mocha": "^3.4.2",
    "sinon": "^2.3.4"
  }
