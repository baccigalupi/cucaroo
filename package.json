{
  "name": "cucaroo",
  "version": "0.4.0",
  "description": "Light cucumber implementation for node javascript",
  "main": "bin/cucaroo",
  "bin": {
    "cucaroo": "./bin/cucaroo"
  },
  "scripts": {
